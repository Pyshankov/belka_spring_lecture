<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorld" class="java.lang.String">
        <constructor-arg value="hello world!"/>
    </bean>

    <bean id="railTransportMethod" class="dependency.injection.RailTransportMethod"/>

    <bean id="transporter" class="dependency.injection.Transporter" >
    <!--<bean id="transporter" class="dependency.injection.Transporter" autowire="byType">-->
        <constructor-arg ref="helloWorld"/>
    </bean>

</beans>